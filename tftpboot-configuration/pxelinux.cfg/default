# install
label tumbleweed
  ipappend 2
  kernel openSUSE-Tumbleweed-x86_6/boot/x86_64/loader/linux
  append initrd=openSUSE-Tumbleweed-x86_6/boot/x86_64/loader/initrd instsys=http://download.opensuse.org/tumbleweed/repo/oss/boot/x86_64/root install=http://download.opensuse.org/tumbleweed/repo/oss/

label leap15
  ipappend 2
  kernel openSUSE-Leap-15.0-x86_6/boot/x86_64/loader/linux
  append initrd=openSUSE-Leap-15.0-x86_6/boot/x86_64/loader/initrd instsys=http://download.opensuse.org/distribution/leap/15.0/repo/oss/boot/x86_64/root install=http://download.opensuse.org/distribution/leap/15.0/repo/oss/

display         message
implicit        1
prompt          1
